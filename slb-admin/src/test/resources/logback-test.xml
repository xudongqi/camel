<configuration>
    <appender name="file"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/data/applogs/phoenix-slb-admin/phoenix-slb-admin-test.log
        </File>
        <Append>true</Append>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/data/applogs/phoenix-slb-admin/phoenix-slb-admin-test.log.%d{yyyy-MM-dd}
            </fileNamePattern>
            <maxHistory>15</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%X{req.uriWithQueryString}] [%thread] %logger - %msg%n
            </pattern>
        </encoder>
    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%level] [%X{req.uriWithQueryString}] [%thread] %logger - %msg%n
            </pattern>
        </encoder>
    </appender>

    <logger name="com.dianping.phoenix" level="DEBUG"/>

    <root level="INFO">
        <appender-ref ref="console"/>
        <appender-ref ref="file"/>
    </root>
</configuration>
